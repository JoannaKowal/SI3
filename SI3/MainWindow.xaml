        <local:GameField x:Name="slot_2_6" HorizontalAlignment="Left" Height="45" Margin="252,403,0,0" VerticalAlignment="Top" Width="45" RenderTransformOrigin="0.5,0.5"/>
        <local:GameField x:Name="slot_2_7" HorizontalAlignment="Left" Height="45" Margin="252,328,0,0" VerticalAlignment="Top" Width="45" RenderTransformOrigin="0.5,0.5"/>

    </Grid>
</Window>
